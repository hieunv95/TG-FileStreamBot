{
  "build": {
    "env": {
      "GO_BUILD_FLAGS": "-ldflags '-s -w'"
    }
  },
  "builds": [
    {
      "src": "build.sh",
      "use": "@vercel/go",
      "config": { "buildCommand": "sh build.sh" }
    }
  ],
  "rewrites": [
    { "source": "/", "destination": "/api/" },
    { "source": "/:path*", "destination": "/api/:path*" }
  ]
}